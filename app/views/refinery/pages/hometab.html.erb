<div id="hometabtitle">
<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <% isactive=0%>
  <% for stickypage in sticky_pages %>
      <% if !stickypage.content_for(:hometabtitle).nil?%>
      <% tab=stickypage.content_for(:hometabtitle).gsub('</p>','').gsub('<p>','')%>
          <li><a href="#<%=raw tab%>" data-toggle="tab"><%= tab%></a></li>
  <% end %>
  <% end %>
</ul>
</div>
<section id='body' style="padding-left:0px;padding-right:0px;width: 997px">
  <section id="stickpagebody">
    <!-- Tab panes -->
    <div class="tab-content">
      <% isactive=0%>
      <% for stickypage in sticky_pages %>
          <% if !stickypage.content_for(:hometabtitle).nil?%>
          <% tab=stickypage.content_for(:hometabtitle).gsub('</p>','').gsub('<p>','')  %>
              <%if isactive==0%>
          <div class="tab-pane active" id="<%=raw tab %>"> <a href="/<%=stickypage.url[:path].join('/') %>"> <%=raw stickypage.content_for(:hometab) %></a></div>
              <%else%>
                  <div class="tab-pane" id="<%=raw tab %>"> <a href="/<%=stickypage.url[:path].join('/') %>"> <%=raw stickypage.content_for(:hometab) %></a></div>
              <% end %>
              <% isactive +=1%>
      <% end %>
      <% end %>
    </div>
  </section>
</section>

