<div id="top_img">
  <span id="arrow"><%= image_tag "arrow.png" %></span>
  <% if !top_page.nil?%>
      <%=raw top_page.content_for(:homepage) %>
  <% end %>
</div>
<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <% isactive=0%>
  <% for stickypage in sticky_pages %>
      <% tab=stickypage.content_for(:smallpagetab).gsub('</p>','').gsub('<p>','')%>
      <%if isactive==0%>
          <li class="active"><a href="#<%=raw tab%>" data-toggle="tab"><%= tab%></a></li>
          <%else%>
          <li><a href="#<%=raw tab%>" data-toggle="tab"><%= tab%></a></li>
      <% end %>
      <% isactive +=1%>
  <% end %>
</ul>

